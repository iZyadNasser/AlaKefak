<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_button" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:backgroundTint">#D94E28</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="style_email_text_field" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">Email</item>
    </style>
    <style name="style_password_text_field" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:hint">Password</item>
    </style>

    <style name="style_image_view" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>

    </style>
    <style name="EditTextAppearance" parent="@style/Theme.AppCompat.Light">

        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="counterEnabled">true</item>
        <item name="helperText">*Required</item>
        <item name="helperTextTextColor">@color/md_theme_error</item>
    </style>

    <style name="TextViewAppearance2" parent="@style/Theme.AppCompat.Light">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:layout_marginStart">@dimen/_56dp</item>
    </style>

    <style name="TextViewAppearance" parent="TextViewAppearance2">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="style_card_view" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>